server {

	server_name test.ittyni.com;

	location / {
		#try_files $uri $uri/ =404;
		proxy_pass http://localhost:8060;
	}



    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/www.ittyni.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/www.ittyni.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}

server {
    if ($host = www.ittyni.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

if ($host = ittyni.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


	server_name ittyni.com www.ittyni.com;
    listen 80;
    return 404; # managed by Certbot


}
server {
    if ($host = api.ittyni.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



	server_name api.ittyni.com;
    listen 80;
    return 404; # managed by Certbot


}
server {
    if ($host = admin.ittyni.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



	server_name admin.ittyni.com;
    listen 80;
    return 404; # managed by Certbot
}
server {
    if ($host = lab.ittyni.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



	server_name lab.ittyni.com;
    listen 80;
    return 404; # managed by Certbot
}
server {
    if ($host = test.ittyni.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



	server_name lab.ittyni.com;
    listen 80;
    return 404; # managed by Certbot
}
